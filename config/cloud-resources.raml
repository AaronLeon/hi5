#%RAML 0.8
title: Steroids Data
mediaType: application/json
baseUri: https://rest-api.appgyver.com/v1

traits:
    - securedBySteroidsApiKey:
        headers:
          steroidsApiKey:
            type: string
            example: exampleapikey
            default: 065cd2136da5317cf87fdcd09142a6739d48296d3d6897b49db7d5f561f1e7d8
          steroidsAppId:
            type: integer
            example: 1234
            default: 85656
  

resourceTypes:
